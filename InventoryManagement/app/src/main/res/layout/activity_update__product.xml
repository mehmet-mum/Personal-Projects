<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/lin_lay"
    android:background="@drawable/animation_list"
    tools:context=".Update_Product">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="100dp"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Barcode:"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/barcode_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginRight="10dp"
                android:enabled="false"
                android:maxLength="20"
                android:singleLine="true"
                android:layout_weight="1"
                android:textCursorDrawable="@drawable/curser_white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/product_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginRight="10dp"
                android:enabled="true"
                android:inputType="textNoSuggestions"
                android:maxLength="20"
                android:singleLine="true"
                android:layout_weight="1"
                android:textCursorDrawable="@drawable/curser_white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Model:"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/model_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginRight="10dp"
                android:enabled="true"
                android:inputType="textNoSuggestions"
                android:maxLength="20"
                android:singleLine="true"
                android:layout_weight="1"
                android:textCursorDrawable="@drawable/curser_white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Number:"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/number_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginRight="10dp"
                android:enabled="true"
                android:inputType="number"
                android:maxLength="9"
                android:singleLine="true"
                android:layout_weight="1"
                android:textCursorDrawable="@drawable/curser_white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="Buy:"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"/>
                <EditText
                    android:id="@+id/buy_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_marginRight="10dp"
                    android:enabled="true"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/curser_white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="Sell:"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/sell_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:layout_marginRight="10dp"
                        android:enabled="true"
                        android:inputType="numberDecimal"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:textCursorDrawable="@drawable/curser_white"/>

                    <ImageButton
                        android:id="@+id/exclamation_button"
                        android:layout_width="8dp"
                        android:layout_height="22dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="5dp"
                        android:visibility="gone"
                        android:background="@drawable/exclamation"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:onClick="update_product"
            android:text="Update Product"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:background="@drawable/rounded_button_transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>